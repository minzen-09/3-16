<h1>Books</h1>

<table width="60%">

  <thead>
    <tr>
      <th width="250">Title</th>
      <th width="500">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
          <%= book.title %>
      </td>
      <td>
          <%= book.body %>
      </td>
      <td>
          <%= link_to "Show", book_path(book.id), style: 'color: #000000;' %>
          <%= link_to "Edit", edit_book_path(book.id), style: 'color: #000000;' %>
          <%= link_to "Destroy", book_path(book.id), style: 'color: #000000;', method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
  </tbody>
<% end %>

</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- form_with部分 -->
<!-- form_with model: @book, url: '/books', method: :post do |f| -->
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title  %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>
<% end %>
